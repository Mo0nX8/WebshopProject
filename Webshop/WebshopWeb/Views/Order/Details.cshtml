@using Webshop.EntityFramework.Data
@model UserData

<div class="container">
    <div class="row justify-content-center">
        <div class="col-auto">
            <h3>Szállítási adatok</h3>
        </div>
    </div>
    @if (Model.Address is null)
    {
        <form action="@Url.Action("RecordAddress", "Order")" method="post">

            <div class="row justify-content-center">
                <div class="col-auto"><label class="form-label fw-bold ">Település</label></div>
            </div>
            <div class="row justify-content-center">
                <div class="col-auto">
                    <input type="text" name="city" class="form-control" />
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-auto"><label class="form-label fw-bold">Irányítószám</label></div>
            </div>
            <div class="row justify-content-center">
                <div class="col-auto">
                    <input type="number" name="zip" class="form-control" />
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-auto"><label class="form-label fw-bold">Utca, házszám</label></div>
            </div>
            <div class="row justify-content-center">
                <div class="col-auto">
                    <input type="text" name="street" class="form-control" />
                </div>
            </div>
            <input type="submit" value="Tovább" />
        </form>

    }
    else
    {
        <div class="row justify-content-center">
            <div class="col-auto"><label class="form-label fw-bold">Település</label></div>
        </div>
        <div class="row justify-content-center">
            <div class="col-auto"><label class="form-label ">@Model.Address.City</label></div>
        </div>
        <div class="row justify-content-center">
            <div class="col-auto"><label class="form-label fw-bold">Irányítószám</label></div>
        </div>
        <div class="row justify-content-center">
            <div class="col-auto"><label class="form-label">@Model.Address.ZipCode</label></div>
        </div>
        <div class="row justify-content-center">
            <div class="col-auto"><label class="form-label fw-bold">Utca, házszám</label></div>
        </div>
        <div class="row justify-content-center">
            <div class="col-auto"><label class="form-label">@Model.Address.StreetAndNumber</label></div>
        </div>

    }
    <div class="row justify-content-center">
        <div class="col-auto">
            <h4>Szállítási opciók</h4>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-auto">
            <input type="radio" name="radio_Delivery" id="Mpl" />MPL Futárszolgálat (Házhozszállítás 1-2 munkanap) <b>1890Ft</b>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-auto">
            <input type="radio" name="radio_Delivery" id="Gls" />GLS Futárszolgálat (Házhozszállítás 1-3 munkanap) <b>1590Ft</b>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-auto">
            <input type="radio" name="radio_Delivery" id="Dpd" />DPD Futárszolgálat (Házhozszállítás 2-3 munkanap) <b>1290Ft</b>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-auto">
            <input type="radio" name="radio_Delivery" id="Gls_Express" />GLS Express Futárszolgálat (Házhozszállítás 1 munkanap) <b>2890Ft</b>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-auto">
            <h4>Fizetési opciók</h4>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-auto">
            <input type="radio" name="radio_Payment" id="after_Pay" />Utánvét (Futárnál készpénzel, bankártyával) <b>490Ft</b>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-auto">
            <input type="radio" name="radio_Payment" id="Online_Pay" />Online bankártyás fizetés(Simple Pay) <b>Ingyenes</b>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-auto">
            <button class="btn btn-secondary"><a href=@Url.Action("PlaceOrder","Order", new { cartId = Context.Session.GetInt32("CartId") }))>Tovább</a></button>
        </div>
    </div>
</div>


