@using Webshop.EntityFramework.Data
@model UserData
@{
    var Code = ViewBag.Response;
}
@using (Html.BeginForm("TryRegister", "Authentication"))
{
    @if(Code is not null && Code!="")
    {
        <h1>@Code</h1>
        
    }
    <h1>Regisztráció</h1>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-auto"><label class="form-label">Felhasználónév</label></div>
        </div>
        <div class="row justify-content-center">
            <div class="col-auto"><input type="text" name="username" class="form-control" /></div>
        </div>
        <div class="row justify-content-center">
            <div class="col-auto"><label class="form-label">Email cím</label></div>
        </div>
        <div class="row justify-content-center">
            <div class="col-auto"><input type="text" name="email" class="form-control" /></div>
        </div>
        <div class="row justify-content-center">
            <div class="col-auto"><label class="form-label">Jelszó</label></div>
        </div>
        <div class="row justify-content-center">
            <div class="col-auto"><input type="password" name="password1" class="form-control"/></div>
        </div>
        <div class="row justify-content-center">
            <div class="col-auto"><label class="form-label">Jelszó újra</label></div>
        </div>
        <div class="row justify-content-center">
            <div class="col-auto"><input type="password" name="password2" class="form-control" /></div>
        </div>
        <div class="row justify-content-center">
            <div class="col-auto"><input type="submit" value="Regisztráció" class="form-"/></div>
        </div>
      
    </div>
}
