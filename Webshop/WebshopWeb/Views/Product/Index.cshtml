@using Webshop.Services.Services.ViewModel
@model ProductFilterViewModel
@{
    var searchValue = ViewBag.searchValue;
}
<head>
    <link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <link rel="stylesheet" href="~/css/products.css" />

</head>
<div id="cart-popup" class="popup">
    <div class="popup-content">
        <span id="popup-close" class="popup-close">&times;</span>
        <p id="popup-message"></p>
    </div>
</div>


<input type="hidden" id="searchValue" value="@searchValue" />
<script>
    function sortProducts(sortOrder) {
        var searchValue = document.getElementById("searchValue") ? document.getElementById("searchValue").value : '';
        var minPrice = document.getElementById("minPrice") ? document.getElementById("minPrice").value : '';
        var maxPrice = document.getElementById("maxPrice") ? document.getElementById("maxPrice").value : '';

        var url = `/Product/Search?sortOrder=${sortOrder}&searchValue=${encodeURIComponent(searchValue)}&minPrice=${minPrice}&maxPrice=${maxPrice}`;
        window.location.href = url;
    }
</script>


<div class="container">
    <div class="row mb-4 justify-content-center">
        <div class="col-lg-8">
            <form method="get" asp-action="Search" id="filterForm" class="p-4 border rounded shadow-sm bg-light">
                <input type="hidden" name="searchValue" value="@ViewBag.searchValue" />
                <input type="hidden" name="sortOrder" id="sortOrderHidden" value="@Model.SortOrder" />

                <div class="row g-3 align-items-center">
                    <div class="col-md-4">
                        <label for="minPrice" class="form-label fw-semibold">Minimum ár</label>
                        <input type="number" class="form-control" id="minPrice" name="minPrice" placeholder="Min ár" />
                    </div>

                    <div class="col-md-4">
                        <label for="maxPrice" class="form-label fw-semibold">Maximum ár</label>
                        <input type="number" class="form-control" id="maxPrice" name="maxPrice" placeholder="Max ár" />
                    </div>

                    <div class="col-md-4 d-grid">
                        <button type="submit" class="btn btn-primary mt-4">
                            <i class="bi bi-filter"></i> Szűrés
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="container mb-3">
    <div class="row">
        <div class="col text-end">
            <div class="dropdown d-inline-block">
                <label class="me-2 fw-semibold">Rendezés:</label>
                <button class="btn btn-light dropdown-toggle" type="button" id="sortDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                    <i class="bi bi-sort-up"></i>
                </button>
                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="sortDropdown">
                    <li><a class="dropdown-item" href="#" onclick="sortProducts('')">Válassz...</a></li>
                    <li><a class="dropdown-item" href="#" onclick="sortProducts('name_asc')">Név szerint (A-Z)</a></li>
                    <li><a class="dropdown-item" href="#" onclick="sortProducts('name_desc')">Név szerint (Z-A)</a></li>
                    <li><a class="dropdown-item" href="#" onclick="sortProducts('price_asc')">Ár szerint növekvő</a></li>
                    <li><a class="dropdown-item" href="#" onclick="sortProducts('price_desc')">Ár szerint csökkenő</a></li>
                </ul>
            </div>
        </div>
    </div>
</div>

    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 row-cols-xl-5">
        @if(Model is not null)
        {
            @foreach (var product in Model.Products)
            {
                <div class="col mb-4">
                    <div class="card">
                        <a href="@Url.Action("Details", "Product", new {name = Uri.EscapeDataString(product.ProductName.Replace(" ", "-")), id=product.Id })" class="text-decoration-none">
                            <div class="card-body">
                                @if (product.ImageData != null && product.ImageData.Length > 0)
                                {
                                    var base64Image = Convert.ToBase64String(product.ImageData);
                                <img src="data:image/jpeg;base64,@base64Image" class="card-img-top product-image" alt="@product.ProductName" loading="lazy">
                                }
                                <h5 class="card-title">@product.ProductName</h5>
                                @if (product.Price == 0)
                                {
                                    <h5 class="color-red">Hamarosan</h5>
                                }
                                else if (product.Quantity < 1)
                                {
                                    <h5 class="color-red">@product.Price.ToString("N0") ft (Nincs raktáron)</h5>
                                }
                                else
                                {
                                    <h5 class="color-red">@product.Price.ToString("N0") Ft</h5>
                                }
                            </div>
                        </a>
                       
                        @if (product.Quantity > 0)
                        {
                            <button data-product-id="@product.Id" class="add-to-cart add-to-cart-btn">Kosárhoz adás</button>
                        }
                    </div>
                </div>
            }

        }
        else
        {
            <div>Sajnos nincs ilyen termék.</div>
        }
        @section Pagination {
            <div class="pagination-container">
                @if (Model.TotalPages > 1)
                {
                    <nav>
                        <ul class="pagination">
                            @if (Model.PageNumber > 1)
                            {
                                <li class="page-item">
                                    <a class="page-link" href="@Url.Action("Search", new { searchValue=searchValue, pageNumber = Model.PageNumber - 1, pageSize = Model.PageSize, MinPrice = Model.MinPrice, MaxPrice = Model.MaxPrice, sortOrder=Model.SortOrder})">Előző</a>
                                </li>
                            }

                            @for (int i = 1; i <= Model.TotalPages; i++)
                            {
                                <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                                    <a class="page-link" href="@Url.Action("Search", new { searchValue=searchValue, pageNumber = i, pageSize = Model.PageSize, MinPrice = Model.MinPrice, MaxPrice = Model.MaxPrice,sortOrder=Model.SortOrder })">@i</a>
                                </li>
                            }

                            @if (Model.PageNumber < Model.TotalPages)
                            {
                                <li class="page-item">
                                    <a class="page-link" href="@Url.Action("Search", new { searchValue=searchValue, pageNumber = Model.PageNumber + 1, pageSize = Model.PageSize, MinPrice = Model.MinPrice, MaxPrice = Model.MaxPrice,sortOrder=Model.SortOrder })">Következő</a>
                                </li>
                            }
                        </ul>
                    </nav>
                }
            </div>
        }

    </div>
</div>
<script src="~/js/addtocart.js"></script>





  
