@using Webshop.Services.Services
@using Webshop.Services.Services.ViewModel
@model PersonalDataViewModel


@if (Model.PasswordChanged)
{
    <div id="passwordSuccessPopup" class="personal-data-popup">
        A jelszavad sikeresen megváltozott.<br />
        Kijelentkeztetés 5 másodpercen belül...
    </div>

    <script>
        setTimeout(function () {
            window.location.href = '@Url.Action("LogOut", "Authentication")';
        }, 5000);
    </script>
}




<div class="row justify-content-center">
    <div class="col-auto">
        <h1>Felhasználói adatok</h1>
        </<div>
        <div class="row justify-content-center">
            <div class="col-auto">
                <h3>Felhasználónév: @Model.UserName</h3>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-auto">
                <h3>Email cím: @Model.Email</h3>
            </div>
        </div>
        @Html.Partial("_ChangePasswordPartial", new PasswordChangeViewModel())
    </div>
