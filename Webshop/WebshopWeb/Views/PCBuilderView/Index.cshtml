<head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/pcbuilder.css" />

</head>


<div id="cart-popup" class="popup">
    <div class="popup-content">
        <span id="popup-close" class="popup-close">&times;</span>
        <p id="popup-message"></p>
    </div>
</div>

<div class="row justify-content-center">
    <div class="col-auto">
        <h1>Számítógép összerakó</h1>
    </div>
</div>

<form id="pcBuilderForm">
    <div class="container my-4">
        <div class="row justify-content-center mb-3">
            <div class="col-md-6 col-lg-4">
                <p class="form-label fw-bold text-center">Processzor</p>
                <select id="cpuSelect" class="form-select" required>
                    <option value="">Válassz</option>
                </select>
            </div>
        </div>

        <div class="row justify-content-center mb-3">
            <div class="col-md-6 col-lg-4">
                <p class="form-label fw-bold text-center">Processzor hűtő</p>
                <select id="cpucoolerSelect" class="form-select">
                    <option value="">Válassz</option>
                </select>
            </div>
        </div>

        <div class="row justify-content-center mb-3">
            <div class="col-md-6 col-lg-4">
                <p class="form-label fw-bold text-center">Alaplap</p>
                <select id="motherboardSelect" class="form-select" required>
                    <option value="">Válassz</option>
                </select>
            </div>
        </div>

        <div class="row justify-content-center mb-3">
            <div class="col-md-6 col-lg-4">
                <p class="form-label fw-bold text-center">Memória</p>
                <select id="ramSelect" class="form-select" required>
                    <option value="">Válassz</option>
                </select>
            </div>
        </div>

        <div class="row justify-content-center mb-3">
            <div class="col-md-6 col-lg-4">
                <p class="form-label fw-bold text-center">Gépház</p>
                <select id="caseSelect" class="form-select" required>
                    <option value="">Válassz</option>
                </select>
            </div>
        </div>

        <div class="row justify-content-center mb-3">
            <div class="col-md-6 col-lg-4">
                <p class="form-label fw-bold text-center">Videókártya</p>
                <select id="gpuSelect" class="form-select">
                    <option value="">Válassz</option>
                </select>
            </div>
        </div>

        <div class="row justify-content-center mb-3">
            <div class="col-md-6 col-lg-4">
                <p class="form-label fw-bold text-center">Tápegység</p>
                <select id="psuSelect" class="form-select">
                    <option value="">Válassz</option>
                </select>
            </div>
        </div>

        <div class="row justify-content-center mb-3">
            <div class="col-md-6 col-lg-4">
                <p class="form-label fw-bold text-center">SSD</p>
                <select id="ssdSelect" class="form-select">
                    <option value="">Válassz</option>
                </select>
            </div>
        </div>

    </div>
</form>
<div class="row justify-content-center">
    <div class="col-auto">
        <div id="totalCost"><span id="costValue">0</span> Ft</div>
    </div>
</div>
<div class="row justify-content-center">
    <div class="col-auto">
        <button class="add-to-cart add-to-cart-btn">Kosárhoz adás</button>
    </div>
</div>
<div id="overlay" style="display:none;">
    <div class="spinner-border" role="status" id="globalSpinner"></div>
</div>
<script>
    const addToCartBaseUrl = '@Url.Action("AddToCart", "Product")';
   
</script>
<script src="~/js/pcbuilder.js"></script>
