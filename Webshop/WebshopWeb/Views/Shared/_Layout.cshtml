@using Webshop.Authenticator.Services.Authenticator

@{
    var cartId = Context.Session.GetInt32("CartId");
    var userId = Context.Session.GetInt32("UserId");
    var authenticated = Context.Session.GetString("IsAuthenticated");

}
<!DOCTYPE html>
<html lang="hu">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DXMarket</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.8.1/font/bootstrap-icons.min.css" rel="stylesheet">
    
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebshopWeb.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <div class="banner-container">
            <img src="~/images/default/site_banner.jpg" class="img-fluid responsive-banner" />
        </div>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">DxMarket</a>
                <a class="navbar-brand" asp-area="" asp-controller="Product" asp-action="Index">Termékek</a>
                <div class="container">
                    <div class="search-bar">
                        <div class="input-group">
                            <input type="text" id="search" placeholder="Keresés" alt="Keresés" name="searchValue" class="form-control" oninput="searchSuggestion()">
                            <a href="#" onclick="searchProduct()" class="btn btn-outline-secondary"><i class="bi bi-search"></i></a>
                            
                        </div>
                        <div id="suggestions-container" class="dropdown-menu" style="width: 100%;"></div>   
                    </div>
                </div>
                <script>
                    var getSearchSuggestionsUrl = '@Url.Action("GetSearchSuggestions", "Product")';
                    function searchProduct()
                    {
                        var searchValue = document.getElementById("search").value;
                        window.location.href = '@Url.Action("Search", "Product")' + '?searchValue=' + encodeURIComponent(searchValue);
                    }
                </script>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
               
               
               
                <div class="collapse navbar-collapse" id="navbarNav" >
                        <div class="dropdown ms-auto" >
                        <a href=@Url.Action("Index","Cart")><button class="btn btn-secondary" id="CartButton" style="background-color:red"><i class="bi bi-cart"></i></button></a>
                        <button class="btn btn-secondary dropdown-toggle" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false" style="background-color:red"><i class="bi bi-person"></i></button>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="dropdownMenuButton">

                            @if(authenticated=="True")
                            {
                                <li><a href=@Url.Action("PersonalData", "Home", new {userId=userId}) class="navbar-brand"><button class="dropdown-item" type="button">Személyes adatok</button></a></li>
                                <li><a href=@Url.Action("MyOrders", "Home", new {userId=userId}) class="navbar-brand"><button class="dropdown-item" type="button">Rendeléseim</button></a></li>
                                <li><a href=@Url.Action("Logout", "Authentication") class="navbar-brand"><button class="dropdown-item" type="button">Kijelentkezés</button></a></li>
                            }
                            else
                            {
                                <li><a asp-area="" asp-controller="Authentication" asp-action="Login" class="navbar-brand"><button class="dropdown-item" type="button">Bejelentkezés</button></a></li>
                                <li><a asp-area="" asp-controller="Authentication" asp-action="Register" class="navbar-brand"><button class="dropdown-item" type="button">Regisztráció</button></a></li>
                            }

                        </ul>
                    </div>
                </div>
              
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
            
        </main>
        @if (IsSectionDefined("Pagination"))
        {
            <div class="pagination-container">
                @RenderSection("Pagination", required: false)
            </div>
        }
    </div>
    

    <footer class="border-top footer text-muted">
        <div class="container d-flex justify-content-center align-items-center">
            <a href=@Url.Action("aszf","Home")>ÁSZF</a>
            @*<div class="col align-items-end">
                <div class="row">
                    <div class="col-sm">
                        <a href="https://www.ipon.hu/" target="_blank">Ipon</a>
                        <img src="~/images/icons/ipon.ico" alt="Ipon" class="responsive-image ml-2">
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm">

                        <a href="https://www.arukereso.hu/" target="_blank">Árukereső</a>
                        <img src="~/images/icons/arukereso.ico" alt="Árukereső" class="responsive-image ml-2">
                    </div>
                </div>

            </div>*@
            
        </div>

    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/searchDropdownHandler.js"></script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
